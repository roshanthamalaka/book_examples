---
#
# A:Platform64 / Ansible role settings / Site: {{ auto_ansible_control_site }}
#
# * Role settings are available only for the corresponding host group and associated playbook
#

sys_repository_managers:
  flatpak: false
  snap: false
  git: true

sys_repository_custom_yum:
  - name: "azure_cli"
    description: "Azure CLI official RPM Repository"
    url: "https://packages.microsoft.com/yumrepos/azure-cli"
    gpgkey: "https://packages.microsoft.com/keys/microsoft.asc"
  - name: "cfoundry_cli"
    description: "Cloud Foundry CLI official RPM Repository"
    url: "https://packages.cloudfoundry.org/fedora"
    gpgkey: "https://packages.cloudfoundry.org/fedora/cli.cloudfoundry.org.key"
  - name: "hashicorp"
    description: "Hashicorp official YUM repository"
{%- raw %}
    url: "{{
      'https://rpm.releases.hashicorp.com/' +
      manage_cloud_control_nodes_yum_distro +
      '/$releasever/$basearch/stable'
      }}"
{% endraw %}
    gpgkey: "https://rpm.releases.hashicorp.com/gpg"
  - name: "google_cloud_sdk"
    description: "Google Cloud SDK"
    url: "https://packages.cloud.google.com/yum/repos/cloud-sdk-el8-x86_64"
    gpgkey: https://packages.cloud.google.com/yum/doc/rpm-package-key.gpg

sys_repository_custom_apt:
  - name: "azure_cli"
    suite: "focal"
    component: "main"
    url: "https://packages.microsoft.com/repos/azure-cli"
    pgpkey: "https://packages.microsoft.com/keys/microsoft.asc"
  - name: "cfoundry_cli"
    suite: "stable"
    component: "main"
    url: "https://packages.cloudfoundry.org/debian"
    pgpkey: "https://packages.cloudfoundry.org/debian/cli.cloudfoundry.org.key"
  - name: "hashicorp"
{%- raw %}
    suite: "{{ manage_cloud_control_nodes_deb_distro }}"
{% endraw %}
    component: "main"
    url: "https://apt.releases.hashicorp.com"
    pgpkey: "https://rpm.releases.hashicorp.com/gpg"
  - name: "google_cloud_sdk"
    description: "Google Cloud SDK"
    suite: "cloud-sdk"
    component: "main"
    url: "https://packages.cloud.google.com/apt"
    pgpkey: "https://packages.cloud.google.com/apt/doc/apt-key.gpg"

sys_repository_catalog_yum:
  azure_cli: true
  cfoundry_cli: true
  hashicorp: true
  google_cloud_sdk: true

sys_repository_catalog_apt:
  azure_cli: true
  cfoundry_cli: true
  hashicorp: true
  google_cloud_sdk: true
...
