#
# Ansible CLI settings / Site: {{ auto_ansible_control_site }}
#
# * Options for debugging
# * See the ansible.cfg file for regular configuration
#

[defaults]

# Temporary files
allow_world_readable_tmpfiles = false
keep_remote_files = false

# Error handling
system_warning = true
any_errors_fatal = true
invalid_task_attribute_failed = true
string_conversion_action = error
error_on_undefined_vars = true
deprecation_warnings = true
action_warnings = true

# Debugger
task_debugger_ignore_errors = true
display_args_to_stdout = true
enable_task_debugger = true
debug = false  # Warning: generates huge amount of debugging data
verbosity = 3

# Timeouts
timeout = 10
gather_timeout = 10
fact_caching_timeout = 86400

# Options
gathering = explicit
fact_caching = yaml
transport = ssh

# StdOut Formatting
stdout_callback = ansible.posix.debug
display_ok_hosts = true
display_failed_stderr = true
display_skipped_hosts = true
show_custom_stats = true
show_per_host_start = true
nocolor = false
force_color = true

[inventory]
enable_plugins = ini
cache_timeout = 3600

[privilege_escalation]
become = false
become_ask_pass = false
become_method = sudo

[ssh_connection]
retries = 1
host_key_checking = yes
pipelining = yes

[colors]
skip = bright gray
debug = bright cyan
verbose = bright blue
ok = bright green
changed = bright green
deprecate = bright red
diff_add = magenta
diff_lines = cyan
diff_remove = bright purple
error = bright red
highlight = bright magenta
unreachable = bright red
warn = bright yellow

[callback_profile_tasks]
task_output_limit = 200
sort_order = none
