#
# Ansible CLI settings / Site: {{ auto_ansible_control_site }}
#
# * Options for regular operation
# * See the ansible-debug.cfg file for debugging configuration
#

[defaults]

# Temporary files
allow_world_readable_tmpfiles = false
keep_remote_files = false

# Error handling
system_warning = false
any_errors_fatal = false
invalid_task_attribute_failed = true
string_conversion_action = ignore
error_on_undefined_vars = false
deprecation_warnings = false
action_warnings = false

# Debugger
task_debugger_ignore_errors = true
display_args_to_stdout = false
enable_task_debugger = false
debug = false
verbosity = 0

# Timeouts
timeout = 10
gather_timeout = 10
fact_caching_timeout = 86400

# Options
gathering = explicit
fact_caching = yaml
transport = ssh

# StdOut Formatting
stdout_callback = community.general.dense
display_ok_hosts = true
display_failed_stderr = true
display_skipped_hosts = false
show_custom_stats = true
show_per_host_start = true
nocolor = false
force_color = true

[inventory]
enable_plugins = ini
cache_timeout = 3600

[privilege_escalation]
become = false
become_ask_pass = false
become_method = sudo

[ssh_connection]
retries = 1
host_key_checking = yes
pipelining = yes

# black', 'bright gray', 'blue', 'white', 'green', 'bright blue', 'cyan', 'bright green', 'red', 'bright cyan', 'purple',
#  'bright red', 'yellow', 'bright purple', 'dark gray', 'bright yellow', 'magenta', 'bright magenta', 'normal'
[colors]
skip = bright gray
debug = bright cyan
verbose = bright blue
ok = bright green
changed = bright green
deprecate = bright red
diff_add = magenta
diff_lines = cyan
diff_remove = bright purple
error = bright red
highlight = bright magenta
unreachable = bright red
warn = bright yellow

[callback_profile_tasks]
task_output_limit = 200
sort_order = none
